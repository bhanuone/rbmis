.ui.centered.grid
  .two.wide.column
    .ui.header Sign up
  .row
    .eight.wide.column
      = form_for(resource, as: resource_name, url: registration_path(resource_name), html:{class: 'ui medium form segment'}) do |f|
        = devise_error_messages!
        .field
          = f.label :name
          = f.text_field :name, autofocus: true
        .field
          = f.label :email
          = f.email_field :email
        .field
          = f.label :password
          - if @minimum_password_length
            %em
              (#{@minimum_password_length} characters minimum)
          = f.password_field :password, autocomplete: "off"
        .field
          = f.label :password_confirmation
          = f.password_field :password_confirmation, autocomplete: "off"
        .ui.buttons
          = f.submit "Sign up", class: 'ui positive button'
          .or
          = render "admins/shared/links"
