!!! 5
%html{ :lang => "en"}
  %head
    %meta{ :charset => "utf-8" }

    %meta{ :name => "viewport", :content => "width=device-width, initial-scale=1.0" }

    %title= content_for?(:title) ? yield(:title) : 'Medical App'
    = stylesheet_link_tag "application"
    = javascript_include_tag "application", 'data-turbolinks-track' => true
    = csrf_meta_tag

  %body.ui.padded.grid
    = render 'components/ui_nav'
    .ui.padded.grid
      .row
        .two.wide.column
        .ten.wide.column
          = breadcrumbs separator: '<i class="right chevron icon divider"></i>', class: 'ui breadcrumb'
      = yield
    = cloudinary_js_config

