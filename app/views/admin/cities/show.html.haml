- breadcrumb :state_city, @state, @city
.ui.centered.grid
  .twelve.wide.column
    .ui.three.column.grid.segment
      .row
        .three.column.wide
          .ui.header= @city.name
      .column.ui.basic.horizontal.segment
        .ui.list
          .item
            %i.ui.top.aligned.building.outline.icon
            .content
              .header City Details
              .list
                .item
                  %i.right.triangle.icon
                  = "Total Areas:#{Area.count}"
                .item
                  %i.right.triangle.icon
                  = 'Total Hospitals:'
                .item
                  %i.right.triangle.icon
                  = "total diagnostic centers"
      .column.ui.basic.horizontal.segment
        .ui.list
          .item
            %i.info.circle.icon.top.aligned
            .content
              .header Professional details
              .list
                .item
                  %i.right.triangle.icon
                  = "Total Doctors: #{Doctor.count}"
                .item
                  %i.right.triangle.icon
                  = "Total Hospitals: #{Hospital.count}"
                .item
                  %i.right.triangle.icon
                  Experience:years
                .item
                  %i.right.triangle.icon
                  RBMIS Verified: Yes
      .column.ui.basic.horizontal.segment
        .ui.list
          .item
            %i.top.aligned.options.icon
            .content
              .header Options
              .list
                .item
                  .tiny.basic.ui.buttons
                    = link_to 'Back', state_cities_path(@state), class: 'ui button'
                    = link_to 'Edit', edit_state_city_path(@state, @city), class: 'ui button'
                    = link_to 'Delete', state_city_path(@state, @city), method: :delete, data: { :confirm => 'Are you sure?' }, class: 'ui button'
      .ui.divider