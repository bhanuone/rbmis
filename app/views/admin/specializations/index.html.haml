- breadcrumb :specializations
.ui.centered.grid
  .four.wide.column
    .ui.header
      Listing specializations
.row
  .four.wide.column
  .four.wide.column= link_to '+New Specialization', new_specialization_path, class: 'ui button primary'
.four.wide.column
.twelve.wide.column
  %table.ui.padded.collapsing.table
    %thead
      %tr
        %th S.no
        %th Name
        %th Alias
        %th.center.aligned Options

    %tbody
      - i = 0
      - @specializations.each do |specialization|
        %tr
          %td= i += 1
          %td= specialization.name
          %td= specialization.alias
          %td
            .ui.buttons
              = link_to 'Show', specialization, class: 'compact ui button primary'
              = link_to 'Edit', edit_specialization_path(specialization), class: 'compact ui button'
              = link_to 'Delete', specialization, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: 'compact ui negative button'
.ui.divider