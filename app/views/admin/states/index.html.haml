- breadcrumb :country_states, @country
.ui.centered.grid
  .two.wide.column
    .ui.header
      Listing states
.row
  .five.wide.column
  .four.wide.column= link_to '+New State', new_country_state_path, class: 'ui button primary'
.row
  .five.wide.column
  .ten.wide.column
    %table.ui.padded.collapsing.table
      %thead
        %tr
          %th S.no
          %th Name
          %th.center.aligned Options

      %tbody
        - i = 0
        - @states.each do |state|
          %tr
            %td= i += 1
            %td= state.name
            %td
              .ui.buttons
                = link_to 'Show', country_state_path(@country, state), class: 'compact ui button primary'
                = link_to 'Edit', edit_country_state_path(@country, state), class: 'compact ui button'
                = link_to 'Delete', country_state_path(@country, state), method: :delete, :data => { :confirm => 'Are you sure?' }, class: 'compact ui negative button'
.ui.divider